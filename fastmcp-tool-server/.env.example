# 1Claw agent JWT (from POST /v1/auth/agent-token)
ONECLAW_AGENT_TOKEN=your-agent-jwt

# Vault UUID the server operates on
ONECLAW_VAULT_ID=your-vault-uuid

# 1Claw API base URL (default: https://api.1claw.xyz)
ONECLAW_BASE_URL=https://api.1claw.xyz

# Transport mode: "stdio" (default) or "httpStream"
MCP_TRANSPORT=stdio

# Port for HTTP streaming mode (default: 3001)
PORT=3001
